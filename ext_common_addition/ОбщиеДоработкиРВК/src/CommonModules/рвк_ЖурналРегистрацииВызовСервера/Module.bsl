	Перем ОбъектМетаданных;
	
	Если Объект <> Неопределено Тогда
		ОбъектМетаданных = Объект.Метаданные(); 
	КонецЕсли;
	
	ЗаписьЖурналаРегистрации(
		ИмяСобытияПолное(ИмяСобытия),
		УровеньЖурналаРегистрации.Ошибка, 
		ОбъектМетаданных,
		Объект,
		Комментарий);
	
